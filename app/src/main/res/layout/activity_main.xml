<?xml version="1.0" encoding="utf-8"?>
<!--
This the main activity view that declare a DrawerLayout.
Including Main_contian.xml inside.
 -->
<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yutengfei.android_template.MainActivity"
    tools:openDrawer="start">

    <include layout="@layout/content_main" />

    <android.support.design.widget.NavigationView android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/navigation_header"
        app:itemBackground="@drawable/pressed_gray" />

</android.support.v4.widget.DrawerLayout>
